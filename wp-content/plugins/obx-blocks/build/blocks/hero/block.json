{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "obx-blocks/hero",
  "version": "1.0.0",
  "title": "Hero Section",
  "category": "obx-blocks",
  "icon": "cover-image",
  "description": "A full-width hero section with background image, heading, and call-to-action buttons.",
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "anchor": true
  },
  "attributes": {
    "anchor": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": ""
    },
    "backgroundImage": {
      "type": "object",
      "default": {}
    },
    "overlayColor": {
      "type": "string",
      "default": ""
    },
    "primaryButtonText": {
      "type": "string",
      "default": ""
    },
    "primaryButtonUrl": {
      "type": "string",
      "default": "#"
    },
    "secondaryButtonText": {
      "type": "string",
      "default": ""
    },
    "secondaryButtonUrl": {
      "type": "string",
      "default": "#contact-us"
    },
    "align": {
      "type": "string",
      "default": "full"
    },
    "textAlign": {
      "type": "string",
      "default": "center"
    },
    "contentWidth": {
      "type": "number",
      "default": 80
    }
  },
  "textdomain": "obx-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "render": "file:./render.php"
}